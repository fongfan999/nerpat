<div class="group container-fluid">
  <div class="section">
    <% if policy(@group).update? %>
      <a class='dropdown-button right' data-activates="<%= dom_id(@group) %>" >
        <i class="material-icons">more_vert</i>
      </a>
      <ul id="<%= dom_id(@group) %>" class="dropdown-content">
        <li><%= link_to "Sửa", [:edit, @group], class: "edit" %></li>
      </ul>
    <% end %>
    <h5 class="section-title truncate"><%= @group.name %></h5>
  </div>

  <ul class="tabs">
    <li class="tab"><a href="#dicussion">Thảo luận</a></li>
    <li class="tab"><a href="#members">Thành viên</a></li>
  </ul>
  <div class="divider"></div>

  <div id="dicussion">
    <%= render Question.all %>
  </div>

  <div id="members" class="row">
    <%= render @group.users %>
  </div>
</div>

<div class="fixed-action-btn">
  <%= link_to m_icon('add'), new_group_question_path(@group), 
    class: "btn-floating btn-large tooltipped", 
    data: {tooltip: "Đặt câu hỏi", position: "left"} %>
</div>
