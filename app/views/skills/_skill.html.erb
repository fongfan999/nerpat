<% if edit_mode %>
  <%= hidden_field_tag "profile[skill_ids][]", skill.id, id: nil %>
<% end %>

<div class="chip">
  <% if !edit_mode && skill.logo %>
    <%= image_tag skill.logo %>
  <% end %>
  <%= skill.name %>
  <% if edit_mode %>
    <i class="close material-icons">close</i>
  <% end %>
</div>
